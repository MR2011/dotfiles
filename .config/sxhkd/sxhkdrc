# Open Terminal
super + Return
	st
# Open Terminal in specific path
super + shift + Return
	otcwd
# Application launcher
super + space
	dmenurc
# Take screenshot
super + p
	flameshot gui -p ~/pictures/screenshots

# Open Applications
super + o ; {b,c,e,s,p}
	{firefox,edcfg,thunderbird,spotify,keepassxc}
# Shutdown
super + shift + o
	poweroff
# Mount USB
super +  m
	sudo musb
# Unmount USB
super + shift + m
	sudo umusb
# Increase Volume
XF86AudioRaiseVolume
	amixer -q set Master 5%+
# Decrease Volume
XF86AudioLowerVolume
	amixer -q set Master 5%-
# Mute/Unmute Volume
XF86AudioMute
	amixer -q set Master toggle
# Play/Pause track
XF86AudioPlay
	playerctl play-pause
# Stop track
XF86AudioStop
	playerctl stop
# Next track
XF86AudioNext
	playerctl next
# Previous track
XF86AudioPrev
	playerctl previous


